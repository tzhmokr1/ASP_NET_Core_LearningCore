@model Razor.Models.Product[]

@{ 
    Layout = null;
}

<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <title>Razor</title>
    <link href="~/lib/bootstrap/dist/css/bootstrap.css" rel="stylesheet" />
</head>
<body>
    <div class="container">
        <br /><br />
        
        <table class="table">
            <tr>
                <th>Name</th>
                <th>Price</th>
            </tr>
            @foreach (Product p in Model) {
                <tr>
                    <td>@p.Name</td>
                    <td>$@p.Price</td>
                </tr>
            }
        </table>

    </div>
</body>
</html>