@model IEnumerable<Fruit>

<h1 class="page-title">Index View</h1>

<table class="table">
    <tr>
        <th>Name</th>
        <th>Price</th>
        <th>Qty</th>
    </tr>
    @foreach (var fruit in Model)
    {
        <tr>
            <td>@fruit.Name</td>
            <td>$@fruit.Price</td>
            <td>@fruit.Qty</td>
        </tr>
    }
</table>

<hr />
<a asp-controller="Home" asp-action="AddFruit">Add another fruit</a>